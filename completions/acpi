# acpi(1) completion                                        -*- shell-script -*-

_acpi() {
	local cur prev words cword comp_args
	_comp_initialize -- "$@" || return

	case $prev in
	--help | --version | -!(-*)[hv])
		return
		;;
	--directory | -!(-*)d)
		_filedir -d
		return
		;;
	esac

	COMPREPLY=($(compgen -W '$(_parse_help "$1")' -- "$cur"))
} &&
	complete -F _acpi acpi

# ex: filetype=sh
